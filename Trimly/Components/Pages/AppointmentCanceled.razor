@page "/appointments-canceled"

<body class="bg-background text-text">
<!-- Encabezado con navegación moderna -->
<header class="bg-surface/80 backdrop-blur-md shadow-lg sticky top-0 z-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
            <div class="flex items-center">
                <NavLink href="/" class="flex items-center">
                    <span class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                        Trimly
                    </span>
                </NavLink>
            </div>
            
            <!-- Navegación principal - Versión escritorio -->
            <nav class="hidden md:flex items-center space-x-1">
                <NavLink href="/" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-primary/10 transition duration-300">
                    Inicio
                </NavLink>
                <NavLink href="/explorer" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-primary/10 transition duration-300">
                    Explorar
                </NavLink>
                <NavLink href="/appointments" class="px-3 py-2 rounded-md text-sm font-medium bg-primary/20 text-primary transition duration-300">
                    Mis Citas
                </NavLink>
            </nav>

            <!-- Búsqueda y perfil -->
            <div class="flex items-center space-x-4">
                <div class="relative hidden md:block">
                    <input
                        type="text"
                        placeholder="Buscar..."
                        class="w-40 lg:w-64 bg-gray-700/50 border border-gray-600 rounded-full py-1.5 px-4 text-sm focus:outline-none focus:ring-2 focus:ring-primary/50"
                    />
                    <button class="absolute right-0 top-0 mt-1.5 mr-3 text-gray-400">
                        <i class="fas fa-search text-sm"></i>
                    </button>
                </div>

                <!-- Perfil de usuario -->
                <div class="relative group">
                    <button
                        class="flex items-center space-x-1 p-1 rounded-full hover:bg-gray-700/50 transition duration-300"
                    >
                        <img
                            src="https://via.placeholder.com/40"
                            alt="Perfil"
                            class="w-8 h-8 rounded-full border border-gray-600"
                        />
                        <i class="fas fa-chevron-down text-xs hidden md:block"></i>
                    </button>

                    <!-- Menú desplegable -->
                    <div
                        class="absolute right-0 mt-2 w-48 bg-surface rounded-md shadow-lg py-1 hidden group-hover:block"
                    >
                        <NavLink href="perfil-usuario.html" class="block px-4 py-2 text-sm hover:bg-gray-700">
                            Mi Perfil
                        </NavLink>
                        <NavLink href="configuracion.html" class="block px-4 py-2 text-sm hover:bg-gray-700">
                            Configuración
                        </NavLink>
                        <div class="border-t border-gray-700 my-1"></div>
                        <NavLink href="/login" class="block px-4 py-2 text-sm hover:bg-gray-700">
                            Cerrar Sesión
                        </NavLink>
                    </div>
                </div>
                
        <!-- Menú móvil desplegable -->
        <div class="md:hidden hidden" id="mobile-menu">
            <div class="px-2 pt-2 pb-3 space-y-1">
                <NavLink href="/" class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">
                    Inicio
                </NavLink>
                <NavLink
                    href="/explorer"
                    class="block px-3 py-2 rounded-md text-base font-medium hover:bg-gray-700">
                    Explorar
                </NavLink>
                <NavLink href="/appointments" class="block px-3 py-2 rounded-md text-base font-medium bg-gray-700">
                    Mis Citas
                </NavLink>
                <div class="relative mt-3">
                    <input
                        type="text"
                        placeholder="Buscar..."
                        class="w-full bg-gray-700 border border-gray-600 rounded-md py-2 px-4 text-sm"
                    />
                    <button class="absolute right-0 top-0 mt-2 mr-3 text-gray-400">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
        </div>
    </div>
</header>

<!-- Contenido principal -->
<main class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-5xl mx-auto">
        <!-- Encabezado de la página -->
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">Mis Citas</h1>
        </div>

        <!-- Pestañas -->
        <div class="border-b border-gray-700 mb-8">
            <nav class="flex space-x-8 -mb-px">
                <NavLink href="/appointments" class="text-gray-400 hover:text-white border-b-2 border-transparent px-1 py-4 font-medium">
                    Próximas
                </NavLink>

                <NavLink href="/appointments-canceled" class="text-primary border-b-2 border-primary px-1 py-4 font-medium">
                    Canceladas
                </NavLink>
            </nav>
        </div>

        <!-- Lista de citas canceladas -->
        <div class="space-y-6">
            <!-- Cita Cancelada 1 -->
            <div
                class="bg-surface rounded-lg shadow-md overflow-hidden opacity-80"
            >
                <div class="p-6">
                    <div
                        class="flex flex-col md:flex-row md:items-center md:justify-between"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="bg-gray-700/50 text-gray-400 rounded-lg p-3 flex flex-col items-center justify-center min-w-[60px]"
                            >
                                <span class="text-lg font-bold">5</span>
                                <span class="text-xs">MAY</span>
                            </div>
                            <div>
                                <div class="flex items-center">
                                    <h2 class="text-xl font-bold text-gray-400">
                                        Corte y Barba
                                    </h2>
                                    <span class="ml-2 text-xs bg-red-900/30 text-red-400 px-2 py-0.5 rounded">
                                        Cancelada
                                    </span>
                                </div>
                                <div class="flex items-center mt-1">
                                    <i class="far fa-clock text-gray-500 mr-1"></i>
                                    <span class="text-gray-500">10:00 AM - 10:45 AM</span>
                                </div>
                                <div class="flex items-center mt-2">
                                    <img
                                        src="https://via.placeholder.com/150"
                                        alt="Barbería"
                                        class="w-8 h-8 rounded-full mr-2 opacity-70"
                                    />
                                    <span class="text-gray-400">Barber Shop Premium</span>
                                </div>
                                <div class="flex items-center mt-1">
                                    <i class="fas fa-map-marker-alt text-gray-500 mr-1"></i>
                                    <span class="text-gray-500">Av. Central 456, Ciudad</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cita Cancelada 2 -->
            <div
                class="bg-surface rounded-lg shadow-md overflow-hidden opacity-80"
            >
                <div class="p-6">
                    <div
                        class="flex flex-col md:flex-row md:items-center md:justify-between"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="bg-gray-700/50 text-gray-400 rounded-lg p-3 flex flex-col items-center justify-center min-w-[60px]"
                            >
                                <span class="text-lg font-bold">28</span>
                                <span class="text-xs">ABR</span>
                            </div>
                            <div>
                                <div class="flex items-center">
                                    <h2 class="text-xl font-bold text-gray-400">
                                        Afeitado Clásico
                                    </h2>
                                    <span class="ml-2 text-xs bg-red-900/30 text-red-400 px-2 py-0.5 rounded">
                                        Cancelada
                                    </span>
                                </div>
                                <div class="flex items-center mt-1">
                                    <i class="far fa-clock text-gray-500 mr-1"></i>
                                    <span class="text-gray-500">3:30 PM - 4:00 PM</span>
                                </div>
                                <div class="flex items-center mt-2">
                                    <img
                                        src="https://via.placeholder.com/150"
                                        alt="Barbería"
                                        class="w-8 h-8 rounded-full mr-2 opacity-70"
                                    />
                                    <span class="text-gray-400">El Corte Perfecto</span>
                                </div>
                                <div class="flex items-center mt-1">
                                    <i class="fas fa-map-marker-alt text-gray-500 mr-1"></i>
                                    <span class="text-gray-500">
                                        Calle Principal 123, Ciudad
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cita Cancelada 3 -->
            <div
                class="bg-surface rounded-lg shadow-md overflow-hidden opacity-80"
            >
                <div class="p-6">
                    <div
                        class="flex flex-col md:flex-row md:items-center md:justify-between"
                    >
                        <div class="flex items-start space-x-4">
                            <div
                                class="bg-gray-700/50 text-gray-400 rounded-lg p-3 flex flex-col items-center justify-center min-w-[60px]"
                            >
                                <span class="text-lg font-bold">15</span>
                                <span class="text-xs">ABR</span>
                            </div>
                            <div>
                                <div class="flex items-center">
                                    <h2 class="text-xl font-bold text-gray-400">
                                        Corte de Cabello
                                    </h2>
                                    <span class="ml-2 text-xs bg-red-900/30 text-red-400 px-2 py-0.5 rounded">
                                        Cancelada
                                    </span>
                                </div>
                                <div class="flex items-center mt-1">
                                    <i class="far fa-clock text-gray-500 mr-1"></i>
                                    <span class="text-gray-500">1:00 PM - 1:30 PM</span>
                                </div>
                                <div class="flex items-center mt-2">
                                    <img
                                        src="https://via.placeholder.com/150"
                                        alt="Barbería"
                                        class="w-8 h-8 rounded-full mr-2 opacity-70"
                                    />
                                    <span class="text-gray-400">Barber Style</span>
                                </div>
                                <div class="flex items-center mt-1">
                                    <i class="fas fa-map-marker-alt text-gray-500 mr-1"></i>
                                    <span class="text-gray-500">
                                        Plaza Central 789, Ciudad
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Mensaje cuando no hay citas canceladas -->
        <div class="hidden bg-surface rounded-lg shadow-md p-8 text-center">
            <div class="inline-block p-4 bg-gray-700/30 rounded-full mb-4">
                <i class="fas fa-calendar-times text-4xl text-gray-400"></i>
            </div>
            <h2 class="text-xl font-semibold mb-2">No tienes citas canceladas</h2>
            <p class="text-gray-400 mb-6">
                Cuando canceles una cita o un barbero cancele tu reserva, aparecerá
                aquí.
            </p>
            <NavLink
                href="/appointments"
                class="inline-flex items-center px-4 py-2 bg-primary hover:bg-primary/80 rounded-md text-white transition duration-300"
            >
                Ver citas próximas
            </NavLink>
        </div>
    </div>
</main>

</body>

