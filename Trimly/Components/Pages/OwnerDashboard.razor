@page "/owner-dashboard"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = nameof(Roles.Owner))]
@inject NavigationManager Navigation
@inject IAuthService AuthService
@inject ILocalStorageService LocalStorage

<body class="min-h-screen bg-background text-text">
<div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    <aside class="hidden md:flex md:flex-col w-64 bg-surface border-r border-gray-700">
        <div class="p-4 border-b border-gray-700">
            <a href="/" class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                Trimly
            </a>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 overflow-y-auto py-4">
            <ul class="space-y-1 px-2">
                <li>
                    <NavLink href="/owner-dashboard" class="flex items-center px-4 py-2 text-sm rounded-md bg-primary/10 text-primary">
                        <i class="fas fa-tachometer-alt w-5 h-5 mr-3"></i>
                        Dashboard
                    </NavLink>
                </li>
                <li>
                    <NavLink href="/owner-companies" class="flex items-center px-4 py-2 text-sm rounded-md hover:bg-gray-700">
                        <i class="fas fa-store w-5 h-5 mr-3"></i>
                        Mis Barberías
                    </NavLink>
                </li>
                <li>
                    <NavLink href="/owner-barberos" class="flex items-center px-4 py-2 text-sm rounded-md hover:bg-gray-700">
                        <i class="fas fa-cut w-5 h-5 mr-3"></i>
                        Barberos
                    </NavLink>
                </li>
                <li>
                    <NavLink href="/owner-servicios" class="flex items-center px-4 py-2 text-sm rounded-md hover:bg-gray-700">
                        <i class="fas fa-list-alt w-5 h-5 mr-3"></i>
                        Servicios
                    </NavLink>
                </li>
                <li>
                    <NavLink href="/owner-appointments" class="flex items-center px-4 py-2 text-sm rounded-md hover:bg-gray-700">
                        <i class="fas fa-calendar-alt w-5 h-5 mr-3"></i>
                        Citas
                    </NavLink>
                </li>

                <li>
                    <NavLink href="/owner-reviews" class="flex items-center px-4 py-2 text-sm rounded-md hover:bg-gray-700">
                        <i class="fas fa-star w-5 h-5 mr-3"></i>
                        Reseñas
                    </NavLink>
                </li>

            </ul>

            <div class="mt-8 px-4">
                <h3 class="px-2 text-xs font-semibold text-gray-400 uppercase tracking-wider">
                    Configuración
                </h3>
                <ul class="mt-2 space-y-1">
                    <li>
                        <NavLink href="/owner-perfil" class="flex items-center px-4 py-2 text-sm rounded-md hover:bg-gray-700">
                            <i class="fas fa-user-circle w-5 h-5 mr-3"></i>
                            Mi Perfil
                        </NavLink>
                    </li>
                    <li>
                        <NavLink href="/owner-ajustes" class="flex items-center px-4 py-2 text-sm rounded-md hover:bg-gray-700">
                            <i class="fas fa-cog w-5 h-5 mr-3"></i>
                            Ajustes
                        </NavLink>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- User -->
        <div class="p-4 border-t border-gray-700">
            <div class="flex items-center">
                <img src="https://via.placeholder.com/40" alt="Avatar" class="w-8 h-8 rounded-full mr-3">
                <div>
                    <p class="text-sm font-medium">Juan Pérez</p>
                    <p class="text-xs text-gray-400">Propietario</p>
                </div>
                <button @onclick="Logout" id="logout-sidebar-button" class="ml-auto text-gray-400 hover:text-white">
                    <i class="fas fa-sign-out-alt"></i>
                </button>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Header -->
        <header class="bg-surface/80 backdrop-blur-md shadow-md z-10">
            <div class="px-4 py-4 flex justify-between items-center">
                <div>
                    <h1 class="text-xl font-semibold">Bienvenido {}</h1>
                    <p class="text-sm text-gray-400">Gestiona como quieras</p>
                </div>

                <div class="flex items-center space-x-4">

                </div>
            </div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto bg-background p-4">
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
                <div class="bg-surface rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-primary/10 text-primary mr-4">
                            <i class="fas fa-store text-xl"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-400">Barberías</p>
                            <p class="text-2xl font-semibold">14</p>
                        </div>
                    </div>
                </div>

                <div class="bg-surface rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-secondary/10 text-secondary mr-4">
                            <i class="fas fa-cut text-xl"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-400">Barberos</p>
                            <p class="text-2xl font-semibold">14</p>
                        </div>
                    </div>
                </div>

                <div class="bg-surface rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-accent/10 text-accent mr-4">
                            <i class="fas fa-users text-xl"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-400">Clientes</p>
                            <p class="text-2xl font-semibold">120</p>
                        </div>
                    </div>
                </div>

                <div class="bg-surface rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-green-500/10 text-green-500 mr-4">
                            <i class="fas fa-calendar-check text-xl"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-400">Citas Totales</p>
                            <p class="text-2xl font-semibold">50</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bg-surface rounded-lg shadow-md mb-6">
                <div class="p-4 border-b border-gray-700">
                    <h2 class="text-lg font-semibold">Acciones Rápidas</h2>
                </div>
                <div class="p-4 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <NavLink href="/create-business" class="bg-gray-700 hover:bg-gray-600 rounded-lg p-4 text-center transition duration-300" Match="NavLinkMatch.Prefix">
                        <div class="bg-primary/10 text-primary rounded-full p-3 inline-block mb-2">
                            <i class="fas fa-plus"></i>
                        </div>
                        <h3 class="font-medium">Nueva Barbería</h3>
                        <p class="text-sm text-gray-400 mt-1">Registrar nueva barbería</p>
                    </NavLink>

                    <NavLink href="/owner-businesses" class="bg-gray-700 hover:bg-gray-600 rounded-lg p-4 text-center transition duration-300" Match="NavLinkMatch.Prefix">
                        <div class="bg-secondary/10 text-secondary rounded-full p-3 inline-block mb-2">
                            <i class="fas fa-list"></i>
                        </div>
                        <h3 class="font-medium">Mis Barberías</h3>
                        <p class="text-sm text-gray-400 mt-1">Listar todas las barberías</p>
                    </NavLink>

                    <NavLink href="/owner-barbers" class="bg-gray-700 hover:bg-gray-600 rounded-lg p-4 text-center transition duration-300" Match="NavLinkMatch.Prefix">
                        <div class="bg-accent/10 text-accent rounded-full p-3 inline-block mb-2">
                            <i class="fas fa-cut"></i>
                        </div>
                        <h3 class="font-medium">Gestionar Barberos</h3>
                        <p class="text-sm text-gray-400 mt-1">Ver y editar barberos</p>
                    </NavLink>

                    <NavLink href="/owner-appointments" class="bg-gray-700 hover:bg-gray-600 rounded-lg p-4 text-center transition duration-300" Match="NavLinkMatch.Prefix">
                        <div class="bg-green-500/10 text-green-500 rounded-full p-3 inline-block mb-2">
                            <i class="fas fa-calendar-alt"></i>
                        </div>
                        <h3 class="font-medium">Gestionar Citas</h3>
                        <p class="text-sm text-gray-400 mt-1">Ver y administrar citas</p>
                    </NavLink>
                </div>
            </div>

            <!-- Modules Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Barberías Module -->
                <div class="bg-surface rounded-lg shadow-md">
                    <div class="p-4 border-b border-gray-700 flex justify-between items-center">
                        <h2 class="text-lg font-semibold">Barberías</h2>
                        <NavLink href="/owner-businesses" class="text-primary hover:text-primary/80 text-sm">Ver todas</NavLink>
                    </div>
                    <div class="p-4">
                        <div class="flex flex-col space-y-4">
                            <NavLink href="/create-business" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-plus text-primary"></i>
                                </div>
                                <span>Crear nueva barbería</span>
                            </NavLink>
                            <NavLink href="/owner-businesses" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-secondary/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-list text-secondary"></i>
                                </div>
                                <span>Ver mis barberías</span>
                            </NavLink>
                            <NavLink href="/business/1" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-accent/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-info-circle text-accent"></i>
                                </div>
                                <span>Ver detalles de barbería</span>
                            </NavLink>
                        </div>
                    </div>
                </div>

                <!-- Barberos Module -->
                <div class="bg-surface rounded-lg shadow-md">
                    <div class="p-4 border-b border-gray-700 flex justify-between items-center">
                        <h2 class="text-lg font-semibold">Barberos</h2>
                        <NavLink href="/owner-barbers" class="text-primary hover:text-primary/80 text-sm">Ver todos</NavLink>
                    </div>
                    <div class="p-4">
                        <div class="flex flex-col space-y-4">
                            <NavLink href="/owner-barbers" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-cut text-primary"></i>
                                </div>
                                <span>Ver todos los barberos</span>
                            </NavLink>
                            <NavLink href="/add-barber" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-secondary/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-user-plus text-secondary"></i>
                                </div>
                                <span>Añadir nuevo barbero</span>
                            </NavLink>
                            <NavLink href="/barber-schedule" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-accent/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-clock text-accent"></i>
                                </div>
                                <span>Horarios</span>
                            </NavLink>
                        </div>
                    </div>
                </div>

                <!-- Citas Module -->
                <div class="bg-surface rounded-lg shadow-md">
                    <div class="p-4 border-b border-gray-700 flex justify-between items-center">
                        <h2 class="text-lg font-semibold">Citas</h2>
                        <NavLink href="/owner-appointments" class="text-primary hover:text-primary/80 text-sm">Ver todas</NavLink>
                    </div>
                    <div class="p-4">
                        <div class="flex flex-col space-y-4">
                            <NavLink href="/owner-appointments" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-calendar-alt text-primary"></i>
                                </div>
                                <span>Ver citas programadas</span>
                            </NavLink>
                            <NavLink href="/appointments-calendar" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-secondary/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-calendar-day text-secondary"></i>
                                </div>
                                <span>Ver calendario</span>
                            </NavLink>
                            <NavLink href="/appointments-history" class="flex items-center p-2 rounded-md hover:bg-gray-700/50" Match="NavLinkMatch.Prefix">
                                <div class="w-8 h-8 rounded-full bg-accent/10 flex items-center justify-center mr-3">
                                    <i class="fas fa-history text-accent"></i>
                                </div>
                                <span>Historial de citas</span>
                            </NavLink>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
</body>

@code {
    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}