@page "/user/home"
@using Microsoft.AspNetCore.Authorization
@inject IAuthService AuthService
@inject NavigationManager Navigation

@attribute [Authorize(Roles = nameof(Roles.Client))]
<body class="bg-background text-text">
<!-- Encabezado con navegación moderna -->
<header class="bg-surface/80 backdrop-blur-md shadow-lg sticky top-0 z-50">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="flex items-center">
        <a href="/user/home" class="flex items-center">
          <span class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">Trimly</span>
        </a>
      </div>

      <!-- Navegación principal - Versión escritorio -->
      <nav class="hidden md:flex items-center space-x-1">
        <a href="/user/home" class="px-3 py-2 rounded-md text-sm font-medium bg-primary/20 text-primary transition duration-300">
          Inicio
        </a>
        <a href="explorar.html" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-primary/10 transition duration-300">
          Explorar
        </a>
            
        <a href="citas.html" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-primary/10 transition duration-300">
          Mis Citas
        </a>
      </nav>

      <!-- Búsqueda y perfil -->
      <div class="flex items-center space-x-4">
        <div class="relative hidden md:block">
          <input type="text" placeholder="Buscar barberías..." class="w-40 lg:w-64 bg-gray-700/50 border border-gray-600 rounded-full py-1.5 px-4 text-sm focus:outline-none focus:ring-2 focus:ring-primary/50" />
          <button class="absolute right-0 top-0 mt-1.5 mr-3 text-gray-400">
            <i class="fas fa-search text-sm"></i>
          </button>
        </div>

        <!-- Perfil de usuario -->
        <div class="relative group">
          <button class="flex items-center space-x-1 p-1 rounded-full hover:bg-gray-700/50 transition duration-300">
            <img src="https://via.placeholder.com/40" alt="Perfil" class="w-8 h-8 rounded-full border border-gray-600"/>
            <i class="fas fa-chevron-down text-xs hidden md:block"></i>
          </button>

          <!-- Menú desplegable -->
          <div
            class="absolute right-0 mt-2 w-48 bg-surface rounded-md shadow-lg py-1 hidden group-hover:block" >
            <NavLink href="perfil-usuario.html" class="block px-4 py-2 text-sm hover:bg-gray-700">Mi Perfil</NavLink>
            <NavLink href="configuracion.html" class="block px-4 py-2 text-sm hover:bg-gray-700">Configuración</NavLink>
            <NavLink href="ayuda.html" class="block px-4 py-2 text-sm hover:bg-gray-700">Ayuda</NavLink>
            <div class="border-t border-gray-700 my-1"></div>
            <NavLink href="/login" class="block px-4 py-2 text-sm hover:bg-gray-700" @onclick="Logout">Cerrar Sesión</NavLink>
          </div>
        </div>
        
      </div>
    </div>

  </div>
</header>

<!-- Hero Section -->
<section
  class="relative bg-gradient-to-br from-primary/20 to-background py-12">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-5xl mx-auto">
      <div class="flex flex-col md:flex-row items-center justify-between">
        <div class="mb-8 md:mb-0 md:mr-8">
          <h1 class="text-4xl font-bold mb-4">Bienvenido, Guirmer</h1>
          <p class="text-xl text-gray-300 mb-6">
            ¿Listo para lucir tu mejor estilo?
          </p>
          <div class="flex space-x-4">
            <a
              href="citas.html"
              class="bg-primary hover:bg-purple-700 text-white px-6 py-3 rounded-md transition duration-300 flex items-center">
              <i class="fas fa-calendar-alt mr-2"></i>
              Mis Citas
            </a>
            <a
              href="explorar.html"
              class="bg-surface hover:bg-gray-700 text-white px-6 py-3 rounded-md transition duration-300 flex items-center">
              <i class="fas fa-search mr-2"></i>
              Explorar
            </a>
          </div>
        </div>
        <div class="relative">
          <div
            class="absolute -top-4 -left-4 w-24 h-24 bg-primary/20 rounded-full"></div>
          <div
            class="absolute -bottom-4 -right-4 w-32 h-32 bg-secondary/20 rounded-full"></div>
          <img
            src="https://via.placeholder.com/400x300"
            alt="Barbería"
            class="relative z-10 rounded-lg shadow-xl w-full max-w-md"/>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Contenido principal -->
