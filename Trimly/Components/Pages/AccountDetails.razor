          Detalles de Cuenta
        </h1>
        <p class="text-xl text-gray-400 relative inline-block">
          Información de tu perfil
          <span class="absolute bottom-0 left-0 w-full h-0.5 bg-gradient-to-r from-primary/50 to-secondary/50 rounded-full"></span>
        </p>
      </div>

      <!-- Account Details -->
      <div class="bg-surface/80 backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden border border-white/5">
        <!-- Header -->
        <div class="p-6 border-b border-white/5 bg-gradient-to-r from-primary/10 to-secondary/10">
          <div class="flex justify-between items-center">
            <h2 class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
              Información Personal
            </h2>
            <NavLink href="/account-edit" class="group flex items-center space-x-2">
              <span class="relative px-4 py-2 bg-surface rounded-lg border border-primary/30 group-hover:border-primary/60 transition-all duration-300">
                <span class="relative z-10 flex items-center text-primary group-hover:text-primary/90">
                  <i class="fas fa-edit mr-2"></i>
                  Editar Perfil
                </span>
                <span class="absolute inset-0 bg-gradient-to-r from-primary/5 to-secondary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-lg"></span>
              </span>
            </NavLink>
          </div>
        </div>

        <div class="p-6 md:p-8">
          <!-- Profile Section -->
          <div class="flex flex-col sm:flex-row items-center sm:items-start mb-8 gap-6">
            <div class="relative">
              <div class="relative group">
                <div class="absolute -inset-1 bg-gradient-to-r from-primary to-secondary rounded-full blur opacity-20 group-hover:opacity-30 transition-opacity duration-300 animate-pulse-slow"></div>
                <div class="relative w-24 h-24 md:w-32 md:h-32 rounded-full bg-gradient-to-tr from-indigo-500 to-purple-600 flex items-center justify-center text-white text-4xl font-bold border-4 border-surface z-10">
                  @GetDynamicInitials(_profileDto.FirstName, _profileDto.LastName)
                </div>
              </div>
            </div>
            
            <div class="text-center sm:text-left">
              <h3 class="text-2xl md:text-3xl font-bold mb-1">@_profileDto.FullName</h3>
              <div class="inline-flex items-center px-3 py-1 rounded-full bg-primary/10 text-primary text-sm font-medium mb-2">
                <span class="w-2 h-2 rounded-full bg-primary mr-2 animate-pulse"></span>
                <span>Cliente</span>
              </div>
            </div>
          </div>

          <!-- Info Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <!-- Contact Info -->
            <div class="bg-surface rounded-xl p-6 border border-white/5 shadow-sm hover:shadow-primary/10 transition-shadow duration-300">
              <div class="flex items-center mb-4">
                <div class="p-2 rounded-lg bg-primary/10 text-primary mr-3">
                  <i class="fas fa-id-card"></i>
                </div>
                <h4 class="text-lg font-semibold">Información de contacto</h4>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="p-2 rounded-lg bg-gray-700/30 text-primary mr-3">
                    <i class="fas fa-envelope text-sm"></i>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-400">Correo electrónico</p>
                    <p class="text-white">@_profileDto.Email</p>
                  </div>
                </div>
                
                <div class="flex items-start">
                  <div class="p-2 rounded-lg bg-gray-700/30 text-primary mr-3">
                    <i class="fas fa-phone text-sm"></i>
                  </div>
                  <div>
                    <p class="text-sm font-medium text-gray-400">Teléfono</p>
                    <p class="text-white">@_profileDto.PhoneNumber</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Account Info -->
            <div class="bg-surface rounded-xl p-6 border border-white/5 shadow-sm hover:shadow-primary/10 transition-shadow duration-300">
              <div class="flex items-center mb-4">
                <div class="p-2 rounded-lg bg-secondary/10 text-secondary mr-3">
                  <i class="fas fa-shield-alt"></i>
                </div>
                <h4 class="text-lg font-semibold">Información de Cuenta</h4>
              </div>
              
              <div class="space-y-4">
                <div class="flex items-start">
                  <div class="p-2 rounded-lg bg-gray-700/30 text-secondary mr-3">
                    <i class="fas fa-user text-sm"></i>
