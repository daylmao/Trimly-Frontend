@page "/account/details"
@using System.Globalization
@using Trimly.Core.Application.DTOs.Account
@inject ILocalStorageService LocalStorage
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@attribute [Authorize(Roles = nameof(Roles.Client))]


@{
  var culture = new CultureInfo("es-DO");
  CultureInfo.DefaultThreadCurrentCulture = culture;
  CultureInfo.DefaultThreadCurrentUICulture = culture;
}

<body class="min-h-screen bg-background text-text flex flex-col">
<!-- Header -->
<header class="bg-surface/90 backdrop-blur-lg shadow-xl sticky top-0 z-50 border-b border-white/5">
