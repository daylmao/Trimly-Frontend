@page "/explorer"

<body class="bg-background text-text">
<!-- Encabezado con navegación moderna -->
<header class="bg-surface/80 backdrop-blur-md shadow-lg sticky top-0 z-50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
            <div class="flex items-center">
                <NavLink href="/" class="flex items-center">
                    <span class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
                        Trimly
                    </span>
                </NavLink>
            </div>

            <!-- Navegación principal - Versión escritorio -->
            <nav class="hidden md:flex items-center space-x-1">
                <NavLink
                    href="/"
                    class="px-3 py-2 rounded-md text-sm font-medium hover:bg-primary/10 transition duration-300"
                >
                    Inicio
                </NavLink>
                <NavLink
                    href="/explorer"
                    class="px-3 py-2 rounded-md text-sm font-medium bg-primary/20 text-primary transition duration-300"
                >
                    Explorar
                </NavLink>
                <NavLink
                    href="/appointments"
                    class="px-3 py-2 rounded-md text-sm font-medium hover:bg-primary/10 transition duration-300"
                >
                    Mis Citas
                </NavLink>
            </nav>

            <!-- Búsqueda y perfil -->
            <div class="flex items-center space-x-4">
                <div class="relative hidden md:block">
                    <input
                        type="text"
                        placeholder="Buscar barberías..."
                        class="w-40 lg:w-64 bg-gray-700/50 border border-gray-600 rounded-full py-1.5 px-4 text-sm focus:outline-none focus:ring-2 focus:ring-primary/50"
                    />
                    <button class="absolute right-0 top-0 mt-1.5 mr-3 text-gray-400">
                        <i class="fas fa-search text-sm"></i>
                    </button>
                </div>

                <!-- Perfil de usuario -->
                <div class="relative group">
                    <button
                        class="flex items-center space-x-1 p-1 rounded-full hover:bg-gray-700/50 transition duration-300"
                    >
                        <img
                            src="https://via.placeholder.com/40"
                            alt="Perfil"
                            class="w-8 h-8 rounded-full border border-gray-600"
                        />
                        <i class="fas fa-chevron-down text-xs hidden md:block"></i>
                    </button>

                    <!-- Menú desplegable -->
                    <div
                        class="absolute right-0 mt-2 w-48 bg-surface rounded-md shadow-lg py-1 hidden group-hover:block"
                    >
                        <NavLink
                            href="perfil-usuario.html"
                            class="block px-4 py-2 text-sm hover:bg-gray-700">
                            Mi Perfil
                        </NavLink>
                        <NavLink
                            href="configuracion.html"
                            class="block px-4 py-2 text-sm hover:bg-gray-700">
                            Configuración
                        </NavLink>

                        <div class="border-t border-gray-700 my-1"></div>
                        <NavLink
                            href="/login"
                            class="block px-4 py-2 text-sm hover:bg-gray-700">
                            Cerrar Sesión
                        </NavLink>
                    </div>
                </div>

                <!-- Menú móvil -->
                <button
                    class="md:hidden p-2 rounded-md hover:bg-gray-700/50 transition duration-300"
                    id="mobile-menu-button"
                >
                    <i class="fas fa-bars text-lg"></i>
                </button>
            </div>
        </div>
        </div>
</header>

<!-- Sección de búsqueda destacada -->
<section class="bg-gradient-to-br from-primary/20 to-background py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl mx-auto text-center">
            <h1 class="text-3xl font-bold mb-6">
                Encuentra la Barbería Perfecta
            </h1>
            <div class="relative">
                <input
                    type="text"
                    placeholder="Buscar por nombre, ubicación o servicio..."
                    class="w-full bg-surface/80 border border-gray-600 rounded-full py-3 px-6 text-lg focus:outline-none focus:ring-2 focus:ring-primary/50 shadow-lg"
                />
                <button
                    class="absolute right-0 top-0 mt-3 mr-4 text-gray-400 hover:text-primary transition duration-300"
                >
                    <i class="fas fa-search text-xl"></i>
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Contenido principal -->
<main class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="max-w-7xl mx-auto">
        <!-- Filtros y resultados -->
        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Filtros -->
            <div class="lg:w-1/4">
                <div class="bg-surface rounded-lg shadow-md p-6 sticky top-24">
                    <h2 class="text-xl font-bold mb-4">Filtros</h2>

                    <!-- Servicios -->
                    <div class="mb-6">
                        <h3 class="font-medium mb-2">Servicios</h3>
                        <div class="space-y-2">
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" checked />
                                <span>Corte de cabello</span>
                            </label>
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" checked />
                                <span>Afeitado</span>
                            </label>
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" />
                                <span>Coloración</span>
                            </label>
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" />
                                <span>Tratamientos capilares</span>
                            </label>
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" />
                                <span>Peinados</span>
                            </label>
                        </div>
                    </div>

                    <!-- Calificación -->
                    <div class="mb-6">
                        <h3 class="font-medium mb-2">Calificación mínima</h3>
                        <div class="flex items-center space-x-2">
                            <div class="flex text-yellow-400">
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="far fa-star"></i>
                            </div>
                            <span class="text-sm">(4.0+)</span>
                        </div>
                        <input
                            type="range"
                            min="1"
                            max="5"
                            value="4"
                            step="0.5"
                            class="w-full mt-2 accent-primary"
                        />
                    </div>

                    <!-- Precio -->
                    <div class="mb-6">
                        <h3 class="font-medium mb-2">Rango de precios</h3>
                        <div class="flex justify-between text-sm mb-2">
                            <span>$10</span>
                            <span>$100</span>
                        </div>
                        <div class="flex space-x-4">
                            <input
                                type="range"
                                min="10"
                                max="100"
                                value="20"
                                class="w-full accent-primary"
                            />
                        </div>
                    </div>

                    <!-- Disponibilidad -->
                    <div class="mb-6">
                        <h3 class="font-medium mb-2">Disponibilidad</h3>
                        <div class="space-y-2">
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" checked />
                                <span>Abierto ahora</span>
                            </label>
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" />
                                <span>Disponible hoy</span>
                            </label>
                            <label class="flex items-center text-sm">
                                <input type="checkbox" class="mr-2 text-primary" />
                                <span>Disponible este fin de semana</span>
                            </label>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="flex space-x-3">
                        <button
                            class="bg-primary hover:bg-purple-700 text-white px-4 py-2 rounded-md transition duration-300 flex-1"
                        >
                            Aplicar
                        </button>
                        <button
                            class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition duration-300"
                        >
                            Limpiar
                        </button>
                    </div>
                </div>
            </div>

            <!-- Resultados -->
            <div class="lg:w-3/4">
                <!-- Controles de resultados -->
                <div
                    class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6"
                >
                    <div class="mb-4 sm:mb-0">
                        <h2 class="text-xl font-bold">Resultados (15)</h2>
                        <p class="text-gray-400 text-sm">
                            Mostrando barberías cerca de tu ubicación
                        </p>
                    </div>
                    <div class="flex items-center space-x-4">
                        <div class="flex items-center space-x-2">
                            <span class="text-sm">Ordenar por:</span>
                            <select
                                class="bg-gray-700 border border-gray-600 rounded-md py-1 px-2 text-sm focus:outline-none focus:ring-2 focus:ring-primary/50"
                            >
                                <option>Relevancia</option>
                                <option>Calificación</option>
                                <option>Precio: menor a mayor</option>
                                <option>Precio: mayor a menor</option>
                            </select>
                        </div>
                        <div class="flex space-x-2">
                            <button
                                class="p-2 bg-gray-700 rounded-md hover:bg-gray-600 transition duration-300"
                            >
                                <i class="fas fa-th-large"></i>
                            </button>
                            <button
                                class="p-2 bg-primary rounded-md hover:bg-purple-700 transition duration-300"
                            >
                                <i class="fas fa-list"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Lista de barberías -->
                <div class="space-y-6">
                    <!-- Barbería 1 -->
                    <div class="bg-surface rounded-lg shadow-md overflow-hidden">
                        <div class="flex flex-col md:flex-row">
                            <div class="md:w-1/3">
                                <img
                                    src="https://via.placeholder.com/400x300"
                                    alt="El Corte Perfecto"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="p-6 md:w-2/3">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h3 class="text-xl font-bold">El Corte Perfecto</h3>
                                        <div class="flex items-center mt-1">
                                            <div class="flex text-yellow-400">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star-half-alt"></i>
                                            </div>
                                            <span class="text-gray-400 text-sm ml-2">
                                                (120 reseñas)
                                            </span>
                                        </div>
                                    </div>
                                    <span
                                        class="bg-green-900/30 text-green-400 text-xs px-2 py-1 rounded-full">
                                        Abierto
                                    </span>
                                </div>

                                <p class="text-gray-400 mt-3">
                                    Especialistas en cortes modernos y clásicos. Ofrecemos
                                    servicios de barbería de alta calidad con barberos
                                    experimentados.
                                </p>

                                <div class="flex flex-wrap gap-2 mt-3">
                      <span class="bg-gray-700 text-xs px-2 py-1 rounded-full"
                      >Corte de cabello</span
                      >
                      <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                          Afeitado
                      </span>
                      <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                          Arreglo de barba
                      </span>
                                </div>

                                <div class="flex items-center mt-3 text-gray-400 text-sm">
                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                    <span>Calle Principal 123, Ciudad (1.2 km)</span>
                                </div>

                                <div class="flex items-center mt-1 text-gray-400 text-sm">
                                    <i class="fas fa-dollar-sign mr-1"></i>
                                    <span>Desde $20</span>
                                </div>

                                <div class="flex space-x-3 mt-4">
                                    <NavLink
                                        href="/barbershop/profile"
                                        class="bg-primary hover:bg-purple-700 text-white px-4 py-2 rounded-md transition duration-300"
                                    >
                                        Ver perfil
                                    </NavLink>
                                    <NavLink
                                        href="/appointments"
                                        class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition duration-300"
                                    >
                                        Reservar
                                    </NavLink>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Barbería 2 -->
                    <div class="bg-surface rounded-lg shadow-md overflow-hidden">
                        <div class="flex flex-col md:flex-row">
                            <div class="md:w-1/3">
                                <img
                                    src="https://via.placeholder.com/400x300"
                                    alt="Estilo Urbano"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="p-6 md:w-2/3">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h3 class="text-xl font-bold">Estilo Urbano</h3>
                                        <div class="flex items-center mt-1">
                                            <div class="flex text-yellow-400">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                            </div>
                                            <span class="text-gray-400 text-sm ml-2">
                                                (95 reseñas)
                                            </span>
                                        </div>
                                    </div>
                                    <span
                                        class="bg-green-900/30 text-green-400 text-xs px-2 py-1 rounded-full">
                                        Abierto
                                    </span>
                                </div>

                                <p class="text-gray-400 mt-3">
                                    Lo último en tendencias urbanas. Nuestro equipo de
                                    estilistas está especializado en los cortes más modernos y
                                    actuales.
                                </p>

                    <div class="flex flex-wrap gap-2 mt-3">
                        <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                            Corte de cabello
                        </span>
                        <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                            Coloración
                        </span>
                        <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                          Diseños
                        </span>
                                </div>

                                <div class="flex items-center mt-3 text-gray-400 text-sm">
                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                    <span>Av. Moderna 789, Ciudad (2.5 km)</span>
                                </div>

                                <div class="flex items-center mt-1 text-gray-400 text-sm">
                                    <i class="fas fa-dollar-sign mr-1"></i>
                                    <span>Desde $25</span>
                                </div>

                                <div class="flex space-x-3 mt-4">
                                    <NavLink
                                        href="/barbershop/profile"
                                        class="bg-primary hover:bg-purple-700 text-white px-4 py-2 rounded-md transition duration-300"
                                    >
                                        Ver perfil
                                    </NavLink>
                                    <NavLink
                                        href="/appointments"
                                        class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition duration-300"
                                    >
                                        Reservar
                                    </NavLink>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Barbería 3 -->
                    <div class="bg-surface rounded-lg shadow-md overflow-hidden">
                        <div class="flex flex-col md:flex-row">
                            <div class="md:w-1/3">
                                <img
                                    src="https://via.placeholder.com/400x300"
                                    alt="Barba & Co."
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="p-6 md:w-2/3">
                                <div class="flex justify-between items-start">
                                    <div>
                                        <h3 class="text-xl font-bold">Barba & Co.</h3>
                                        <div class="flex items-center mt-1">
                                            <div class="flex text-yellow-400">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="far fa-star"></i>
                                            </div>
                                            <span class="text-gray-400 text-sm ml-2">
                                                (78 reseñas)
                                            </span>
                                        </div>
                                    </div>
                                    <span
                                        class="bg-red-900/30 text-red-400 text-xs px-2 py-1 rounded-full">
                                        Cerrado
                                    </span>
                                </div>

                                <p class="text-gray-400 mt-3">
                                    Especialistas en barbas y tratamientos. Ofrecemos
                                    servicios personalizados para el cuidado de tu barba y
                                    cabello.
                                </p>

                                <div class="flex flex-wrap gap-2 mt-3">
                                    <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                                        Arreglo de barba
                                    </span>
                                      <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                                          Tratamientos
                                      </span>
                                    <span class="bg-gray-700 text-xs px-2 py-1 rounded-full">
                                        Afeitado clásico
                                    </span>
                                </div>

                                <div class="flex items-center mt-3 text-gray-400 text-sm">
                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                    <span>Plaza Central 45, Ciudad (3.8 km)</span>
                                </div>

                                <div class="flex items-center mt-1 text-gray-400 text-sm">
                                    <i class="fas fa-dollar-sign mr-1"></i>
                                    <span>Desde $18</span>
                                </div>

                                <div class="flex space-x-3 mt-4">
                                    <NavLink
                                        href="/barbershop/profile"
                                        class="bg-primary hover:bg-purple-700 text-white px-4 py-2 rounded-md transition duration-300"
                                    >
                                        Ver perfil
                                    </NavLink>
                                    <NavLink
                                        href="/appointments"
                                        class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition duration-300"
                                    >
                                        Reservar
                                    </NavLink>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Paginación -->
                <div class="flex justify-center mt-8">
                    <nav class="flex items-center space-x-2">
                        <NavLink
                            href="#"
                            class="px-3 py-1 rounded-md bg-gray-700 hover:bg-gray-600 transition duration-300"
                        >
                            <i class="fas fa-chevron-left"></i>
                        </NavLink>
                        <NavLink href="#" class="px-3 py-1 rounded-md bg-primary text-white">
                            1
                        </NavLink>
                        <NavLink
                            href="#"
