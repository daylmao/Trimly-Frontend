    private PagedResponse<ReviewsDTos> reviewsResponse = new(); // Inicializar como null
    private int currentPage = 2;
    private int pageSize = 2;
    private int totalPages = 1;
    private System.Threading.Timer refreshTimer;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadReviews();
        refreshTimer = new System.Threading.Timer(async _ => 
        {
            await InvokeAsync(async () =>
            {
                await LoadReviews();
                StateHasChanged();
            });
        }, null, 60000, 60000);
    }
    
    private async Task LoadReviews()
    {
        try
        {
            var response = await ReviewsService.PaginationReviews(pageNumber: currentPage,
                pageSize: pageSize);
        
            if (response.Success)
            {
                reviewsResponse = new PagedResponse<ReviewsDTos>
                {
                    Items = new List<ReviewsDTos>(response.Data.Items),
                    TotalCount = response.Data.TotalCount, // Cambiar de TotalCount a TotalItems
                    PageNumber = response.Data.PageNumber, // Cambiar de PageNumber a CurrentPage
                    PageSize = response.Data.PageSize
                };
                
                totalPages = (int)Math.Ceiling((double)reviewsResponse.TotalCount / pageSize);
            }
            else
            {
                reviewsResponse = new PagedResponse<ReviewsDTos>
                {
                    Items = new List<ReviewsDTos>(),
                    TotalCount = 0,
                    PageNumber = currentPage,
                    PageSize = pageSize
                };
                
                totalPages = 1;
                
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading reviews: {ex.Message}");
            reviewsResponse = new PagedResponse<ReviewsDTos>
            {
                Items = new List<ReviewsDTos>(),
                TotalCount = 0,
                PageNumber = currentPage,
                PageSize = pageSize
            };
        }
        finally
        {
            StateHasChanged();
        }
    }
    
    public void Dispose()
    {
        refreshTimer?.Dispose();
    }
    
