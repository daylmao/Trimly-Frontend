@page "/account-edit"
@using Trimly.Core.Application.DTOs.Account
@inject IAuthService AuthService
@inject ILocalStorageService LocalStorage
@inject NavigationManager NavigationManager

<body class="min-h-screen bg-background text-text flex flex-col">
<!-- Header -->
<header class="bg-surface/90 backdrop-blur-lg shadow-xl sticky top-0 z-50 border-b border-white/5">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <!-- Logo -->
      <div class="flex items-center">
        <NavLink href="/user/home" class="flex items-center group">
          <span class="text-2xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent group-hover:bg-gradient-to-l transition-all duration-500">Trimly</span>
          <span class="ml-2 w-2 h-2 rounded-full bg-primary animate-pulse"></span>
        </NavLink>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-1">
        <NavLink href="/user/home" class="px-3 py-2 rounded-md text-sm font-medium relative group">
          <span class="relative z-10 flex items-center">
            <i class="fas fa-home mr-2 text-gray-400 group-hover:text-primary transition-colors"></i>
            Inicio
          </span>
          <span class="absolute bottom-0 left-0 h-0.5 bg-primary w-0 group-hover:w-full transition-all duration-300"></span>
        </NavLink>
        <NavLink href="/explorer" class="px-3 py-2 rounded-md text-sm font-medium relative group">
          <span class="relative z-10 flex items-center">
            <i class="fas fa-search mr-2 text-gray-400 group-hover:text-primary transition-colors"></i>
            Explorar
          </span>
          <span class="absolute bottom-0 left-0 h-0.5 bg-primary w-0 group-hover:w-full transition-all duration-300"></span>
        </NavLink>
        <NavLink href="/appointments" class="px-3 py-2 rounded-md text-sm font-medium relative group">
          <span class="relative z-10 flex items-center">
            <i class="fas fa-calendar-alt mr-2 text-gray-400 group-hover:text-primary transition-colors"></i>
            Mis Citas
          </span>
          <span class="absolute bottom-0 left-0 h-0.5 bg-primary w-0 group-hover:w-full transition-all duration-300"></span>
        </NavLink>
      </nav>

      <!-- Profile Menu -->
      <div class="flex items-center space-x-4">
        <div class="relative group">
          <div class="flex items-center space-x-1 p-1 rounded-full hover:bg-gray-700/50 transition-all duration-300 cursor-pointer">
            <div class="relative">
              <div class="w-8 h-8 rounded-full bg-gradient-to-tr from-indigo-500 to-purple-600 flex items-center justify-center shadow-[0_0_12px_-2px_rgba(99,102,241,0.5)] group-hover:shadow-[0_0_16px_-1px_rgba(99,102,241,0.7)] transition-all duration-500">
                <i class="fas fa-user-astronaut text-sm text-white/90"></i>
              </div>
              <span class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 rounded-full border border-gray-800"></span>
            </div>
            <i class="fas fa-chevron-down text-xs hidden md:block transition-transform duration-300 group-hover:rotate-180"></i>
          </div>

          <div class="absolute right-0 mt-2 w-48 bg-surface rounded-lg shadow-2xl py-1 z-50 border border-gray-700/30 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 origin-top-right transform scale-95 group-hover:scale-100">
            <NavLink href="/account/details" class="block px-4 py-2 text-sm hover:bg-gray-700/50 transition-colors duration-300 flex items-center">
              <i class="fas fa-cog mr-2 text-primary/80"></i>
              Configuración
            </NavLink>
            <div class="border-t border-gray-700/30 my-1"></div>
            <button @onclick="Logout" class="block w-full text-left px-4 py-2 text-sm hover:bg-gray-700/50 transition-colors duration-300 flex items-center">
              <i class="fas fa-sign-out-alt mr-2 text-primary/80"></i>
              Cerrar Sesión
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Main Content -->
<main class="relative bg-gradient-to-br from-primary/10 via-background to-secondary/10 py-12 flex-grow">
  <!-- Loading Indicator -->
  @if (_isLoading)
  {
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
      <div class="animate-spin rounded-full h-16 w-16 border-t-4 border-b-4 border-primary"></div>
    </div>
  }

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="max-w-4xl mx-auto">
      <!-- Page Header -->
      <div class="mb-10">
        <div class="flex items-center mb-4">
          <NavLink href="/account/details" class="group mr-3">
            <div class="p-2 rounded-lg bg-surface border border-white/5 group-hover:border-primary/50 transition-all duration-300">
              <i class="fas fa-arrow-left text-gray-400 group-hover:text-primary transition-colors"></i>
            </div>
          </NavLink>
          <div>
            <h1 class="text-3xl md:text-4xl font-bold bg-gradient-to-r from-primary via-purple-500 to-secondary bg-clip-text text-transparent">
              Editar Perfil
            </h1>
            <p class="text-gray-400">Actualiza tu información personal</p>
          </div>
        </div>
      </div>

      <!-- Edit Form -->
      <div class="bg-surface/80 backdrop-blur-sm rounded-2xl shadow-2xl overflow-hidden border border-white/5">
        <!-- Header -->
        <div class="p-6 border-b border-white/5 bg-gradient-to-r from-primary/10 to-secondary/10">
          <h2 class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            Información Personal
          </h2>
        </div>

        <div class="p-6 md:p-8">
          <EditForm Model="_updateAccountDto" OnValidSubmit="HandleSubmit">
            <!-- Profile Section -->
            <div class="flex flex-col sm:flex-row items-center sm:items-start mb-8 gap-6">
              <div class="relative">
                <div class="relative group">
                  <div class="absolute -inset-1 bg-gradient-to-r from-primary to-secondary rounded-full blur opacity-20 group-hover:opacity-30 transition-opacity duration-300 animate-pulse-slow"></div>
                  <div class="relative w-24 h-24 md:w-32 md:h-32 rounded-full bg-gradient-to-tr from-indigo-500 to-purple-600 flex items-center justify-center text-white text-4xl font-bold border-4 border-surface z-10">
                    @GetDynamicInitials(_updateAccountDto.FirstName, _updateAccountDto.LastName)
                  </div>
                </div>
              </div>
              
              <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label class="block text-sm font-medium mb-2 text-gray-400">Nombre</label>
                  <InputText @bind-Value="_updateAccountDto.FirstName"
                              class="w-full bg-gray-700/50 border border-white/10 rounded-xl py-3 px-4 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-transparent transition-all duration-300" />
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2 text-gray-400">Apellidos</label>
                  <InputText @bind-Value="_updateAccountDto.LastName"
                              class="w-full bg-gray-700/50 border border-white/10 rounded-xl py-3 px-4 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-transparent transition-all duration-300" />
                </div>
              </div>
            </div>

            <!-- Form Fields -->
            <div class="space-y-6">
              <!-- Email Field -->
              <div class="bg-gray-700/30 rounded-xl p-4 border border-white/5 hover:border-primary/30 transition-colors duration-300">
                <label class="block text-sm font-medium mb-2 text-gray-400 flex items-center">
                  <i class="fas fa-envelope text-primary mr-2"></i>
                  Correo electrónico
                </label>
                <InputText @bind-Value="_profileDto.Email"
                            disabled
                            class="w-full bg-gray-700/50 border border-white/10 rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-transparent transition-all duration-300" />
              </div>

              <!-- Phone Field -->
              <div class="bg-gray-700/30 rounded-xl p-4 border border-white/5 hover:border-primary/30 transition-colors duration-300">
                <label class="block text-sm font-medium mb-2 text-gray-400 flex items-center">
                  <i class="fas fa-phone text-primary mr-2"></i>
                  Teléfono
                </label>
                <InputText @bind-Value="_profileDto.PhoneNumber"
                            class="w-full bg-gray-700/50 border border-white/10 rounded-lg py-2 px-3 focus:outline-none focus:ring-2 focus:ring-primary/50 focus:border-transparent transition-all duration-300" />
              </div>
            </div>

            <!-- Form Actions -->
            <div class="mt-8 p-6 border-t border-white/5 flex justify-end bg-gray-800/20">
              <div class="flex flex-col sm:flex-row gap-3">
                <NavLink href="/account/details" class="px-6 py-3 bg-surface border border-white/5 hover:border-primary/50 rounded-lg text-white font-medium transition-all duration-300 transform hover:scale-105 text-center">
                  Cancelar
                </NavLink>
                <button type="submit" class="px-6 py-3 bg-gradient-to-r from-primary to-purple-600 hover:from-primary/90 hover:to-purple-600/90 rounded-lg text-white font-medium transition-all duration-300 transform hover:scale-105 shadow-lg flex items-center justify-center"
                        disabled="@_isLoading">
                  @if (_isLoading)
                  {
                    <span class="animate-spin mr-2">
                      <i class="fas fa-circle-notch"></i>
                    </span>
                  }
                  Guardar cambios
                </button>
              </div>
            </div>
          </EditForm>

          @if (!string.IsNullOrEmpty(_message))
          {
            <div class="@(_isSuccess ? "bg-green-900/20 text-green-400" : "bg-red-900/20 text-red-400") rounded-lg p-4 mt-4 text-sm flex items-center">
              <i class="@(_isSuccess ? "fas fa-check-circle" : "fas fa-exclamation-circle") mr-2"></i>
              @_message
            </div>
          }
        </div>
      </div>
    </div>
  </div>
</main>

<!-- Footer -->
<footer class="bg-[#1F2937] py-8">  
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-start">
      <div class="mb-6 md:mb-0">
