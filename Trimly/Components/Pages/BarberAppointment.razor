                                    <option value="beard">Arreglo de barba</option>
                                    <option value="combo">Corte y afeitado</option>
                                    <option value="styling">Corte y peinado</option>
                                    <option value="color">Coloración</option>
                                </select>
                            </div>

                            <div>
                                <label for="appointment-date" class="block text-sm text-gray-400 mb-1">Fecha *</label>
